{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/core/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/core/tsconfig.app.json",
        "assets": [
            "document/templates/**/*"
        ]
    },
    "projects": {
        "prisma": {
            "type": "library",
            "root": "libs/prisma",
            "entryFile": "index",
            "sourceRoot": "libs/prisma/src",
            "compilerOptions": {
                "tsConfigPath": "libs/prisma/tsconfig.lib.json"
            }
        },
        "core": {
            "type": "application",
            "root": "apps/core",
            "entryFile": "main",
            "sourceRoot": "apps/core/src",
            "compilerOptions": {
                "tsConfigPath": "apps/core/tsconfig.app.json"
            }
        },
        "users-manager": {
            "type": "application",
            "root": "apps/users-manager",
            "entryFile": "main",
            "sourceRoot": "apps/users-manager/src",
            "compilerOptions": {
                "tsConfigPath": "apps/users-manager/tsconfig.app.json"
            }
        },
        "organisation": {
            "type": "application",
            "root": "apps/organisation",
            "entryFile": "main",
            "sourceRoot": "apps/organisation/src",
            "compilerOptions": {
                "tsConfigPath": "apps/organisation/tsconfig.app.json"
            }
        },
        "user": {
            "type": "application",
            "root": "apps/user",
            "entryFile": "main",
            "sourceRoot": "apps/user/src",
            "compilerOptions": {
                "tsConfigPath": "apps/user/tsconfig.app.json"
            }
        },
        "product": {
            "type": "application",
            "root": "apps/product",
            "entryFile": "main",
            "sourceRoot": "apps/product/src",
            "compilerOptions": {
                "tsConfigPath": "apps/product/tsconfig.app.json"
            }
        },
        "order": {
            "type": "application",
            "root": "apps/order",
            "entryFile": "main",
            "sourceRoot": "apps/order/src",
            "compilerOptions": {
                "tsConfigPath": "apps/order/tsconfig.app.json"
            }
        },
        "transaction": {
            "type": "application",
            "root": "apps/transaction",
            "entryFile": "main",
            "sourceRoot": "apps/transaction/src",
            "compilerOptions": {
                "tsConfigPath": "apps/transaction/tsconfig.app.json"
            }
        },
        "activity": {
            "type": "application",
            "root": "apps/activity",
            "entryFile": "main",
            "sourceRoot": "apps/activity/src",
            "compilerOptions": {
                "tsConfigPath": "apps/activity/tsconfig.app.json"
            }
        },
        "document": {
            "type": "application",
            "root": "apps/document",
            "entryFile": "main",
            "sourceRoot": "apps/document/src",
            "compilerOptions": {
                "tsConfigPath": "apps/document/tsconfig.app.json"
            }
        },
        "notification": {
            "type": "application",
            "root": "apps/notification",
            "entryFile": "main",
            "sourceRoot": "apps/notification/src",
            "compilerOptions": {
                "tsConfigPath": "apps/notification/tsconfig.app.json"
            }
        }
    },
    "monorepo": true,
    "root": "apps/core"
}